<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/food_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp"
    android:padding="8dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sports_circleimageview_foto"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/sports_textview_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sports_circleimageview_foto"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/sports_textview_kalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sports_circleimageview_foto"
            android:layout_below="@+id/sports_textview_nama"

            android:layout_margin="2dp"
            android:fontFamily="sans-serif"
            android:text="@string/app_name"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/sports_textview_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sports_circleimageview_foto"
            android:layout_below="@+id/sports_textview_kalori"
            android:layout_margin="2dp"
            android:fontFamily="sans-serif"
            android:text="@string/app_name"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/sports_imageview_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add_circle_outline"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>